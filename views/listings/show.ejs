<% layout("/layouts/boilerplate.ejs") %>
<main class="details my-4"><!-- ✅ MAIN added -->
  <h2 class="text-center mb-4"><%= listing.title %></h2>

  <div class="detailed-card text-center">
    <img src="<%= listing.image.url %>" 
         class="card-img show-img"
         style="width: 90%; height: 750px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.2);">

    <div class="card-body mt-3 text-start">
      <p style="font-size: large;">
        <strong>Description:</strong> <%= listing.description %><br>
        <strong>Price:</strong> ₹<%= listing.price %><br>
        <strong>Location:</strong> <%= listing.location %><br>
        <strong>Country:</strong> <%= listing.country %><br>
      </p>
    </div>
  </div>

  <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
    <div class="mt-3 text-center">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit Listing</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% } %>

  <!-- Review form -->
  <% if (currentUser) { %>
    <div class="col-7 offset-2">
      <h4 class="mb-3 mt-3">Leave a review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        
        <!-- ⭐ Starability rating -->
        <fieldset class="starability-slot">
          <legend class="visually-hidden">Rating:</legend>
          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1" title="Terrible">1 star</label>

          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2" title="Not good">2 stars</label>

          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3" title="Average">3 stars</label>

          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4" title="Very good">4 stars</label>

          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5" title="Amazing">5 stars</label>
        </fieldset>

        <!-- Comment -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea class="form-control" id="comment" name="review[comment]" cols="8" rows="3" required></textarea>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  <% } %>

  <!-- Reviews section -->
  <div class="mt-4">
    <h3 class="heading" style="margin-left: 69px;">Reviews</h3>
    <div class="review row">
      <% if (listing.reviews.length > 0) { %>
        <% listing.reviews.forEach(review => { %>
          <div class="card-review mb-2 p-3 col-6">
            <h5><%= review.author.username %></h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <strong>Comment:</strong> <%= review.comment %> <br>
            <small class="text-muted">
              Posted on <%= review.createdAt.toDateString() %>
            </small>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-2">
              <button class="btn btn-dark">delete</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p>No reviews yet. Be the first to review!</p>
      <% } %>
    </div>
  </div>

  <!-- Map Section -->
  <div class="mt-4 text-center">
    <h5>Map</h5>
    <div id="map" style="height: 400px; width: 80%; margin: auto; border-radius: 10px;"></div>
  </div>

  <!-- ✅ MapTiler SDK -->
  <script src="https://cdn.maptiler.com/maptiler-sdk-js/v1.0.0/maptiler-sdk.umd.min.js"></script>
  <link href="https://cdn.maptiler.com/maptiler-sdk-js/v1.0.0/maptiler-sdk.css" rel="stylesheet" />

  <script>
    maptilersdk.config.apiKey = "<%= process.env.MAPTILER_API_KEY %>";

    // Get the location from server-side variable
    const locationName = "<%= listing.location %>, <%= listing.country %>";

    // Geocode the location to get coordinates
    async function loadMap() {
      try {
        const response = await fetch(
          `https://api.maptiler.com/geocoding/${encodeURIComponent(locationName)}.json?key=<%= process.env.MAPTILER_API_KEY %>`
        );
        const data = await response.json();

        if (data.features && data.features.length > 0) {
          const [lng, lat] = data.features[0].geometry.coordinates;

          const map = new maptilersdk.Map({
            container: 'map',
            style: maptilersdk.MapStyle.STREETS,
            center: [lng, lat],
            zoom: 10
          });

          new maptilersdk.Marker().setLngLat([lng, lat]).addTo(map);
        } else {
          document.getElementById('map').innerHTML = "<p>Location not found on map</p>";
        }
      } catch (err) {
        console.error("Geocoding error:", err);
        document.getElementById('map').innerHTML = "<p>Map could not be loaded</p>";
      }
    }

    loadMap();
  </script>

</main> <!-- ✅ MAIN closes --> 